# __author__ = 'mvheimburg'


<DoorBell>:
    FloatLayout:
        size_hint: None, None
        width: 600
        height: 480
        Image:
            source: 'atlas://frontend/assets/familie/familieatlas/Familie1'

    FloatLayout:
        size_hint: None, None
        width: 200
        height: 480
        MDFloatingActionButton:
            # icon: "account-circle"
            icon: 'bell'
            user_font_size: "120sp"
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            md_bg_color: app.theme_cls.primary_dark
            on_press: app.worker.bell_ring()



