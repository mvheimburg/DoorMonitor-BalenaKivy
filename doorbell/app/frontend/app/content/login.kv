<Login>:
    id: login
    MDBoxLayout:
        orientation: "horizontal"
        # canvas.before:
        #     Color:
        #         rgba: 0., 0., 1., .3
        #     Rectangle:
        #         pos: self.pos
        #         size: self.size
        
        MDFloatLayout:
            # id: keypad
            size_hint: None, None
            width: 480
            height: 480
            KeyPad:
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                NumericButton:
                    number: 1
                    on_release: root.number_input(self.number)
                NumericButton:
                    number: 2
                    on_release: root.number_input(self.number)
                NumericButton:
                    number: 3
                    on_release: root.number_input(self.number)
                NumericButton:
                    number: 4
                    on_release: root.number_input(self.number)
                NumericButton:
                    number: 5
                    on_release: root.number_input(self.number)
                NumericButton:
                    number: 6
                    on_release: root.number_input(self.number)
                NumericButton:
                    number: 7
                    on_release: root.number_input(self.number)
                NumericButton:
                    number: 8
                    on_release: root.number_input(self.number)
                NumericButton:
                    number: 9
                    on_release: root.number_input(self.number)
                NumericButton:
                    action: "cancel"
                    icon: "cancel"
                    on_release: root.action_input(self.action)  
                NumericButton:
                    number: 0
                    on_release: root.number_input(self.number)
                NumericButton:
                    action: "clear"
                    icon: "backspace-outline"
                    on_release: root.action_input(self.action)  

            
            MDFloatLayout:
                # canvas.before:
                #     Color:
                #         rgba: 0., 1., 0., .3
                #     Rectangle:
                #         pos: self.pos
                #         size: self.size
                # md_bg_color: app.theme_cls.primary_color
                # # md_bg_color: app.azure
                id: pindisp
                
                pos_hint: {'x': 1}
                size_hint: None, None
                width: 320
                height: 480
                MDBoxLayout:
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    PinIcon:
                        halign: "center"
                        icon: login.icon_list[0]
                    PinIcon:
                        halign: "center"
                        icon: login.icon_list[1]
                    PinIcon:
                        halign: "center"
                        icon: login.icon_list[2]
                    PinIcon:
                        halign: "center"
                        icon: login.icon_list[3]
            

